<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#serviceOrderItemModal">Add Item To Order</button>

<!-- Modal -->
<div id="serviceOrderItemModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Add Item To Order</h3>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="email">This is a placeholder form</label>
                        <input type="email" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="pwd">This is a placeholder form</label>
                        <input type="password" class="form-control" id="pwd">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox">This is a placeholder form</label>
                    </div>
                    <button type="submit" class="btn btn-default">Add</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>
